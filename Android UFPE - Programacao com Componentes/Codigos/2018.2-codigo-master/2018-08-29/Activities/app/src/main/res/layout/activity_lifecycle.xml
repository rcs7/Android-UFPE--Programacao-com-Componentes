<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/campoTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/botaoAdicionaTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faz alguma coisa" />

    <TextView
        android:id="@+id/textoDigitado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nao digitou nada..."
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="5dp" />
    <Button
        android:id="@+id/botaoDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abre Dialog" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/lifecycleLog"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="..." />
    </ScrollView>



</LinearLayout>
