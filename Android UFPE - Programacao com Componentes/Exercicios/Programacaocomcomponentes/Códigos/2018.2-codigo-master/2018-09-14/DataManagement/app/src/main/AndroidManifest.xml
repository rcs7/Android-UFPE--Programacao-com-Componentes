    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MemoriaExternaActivity" />
        <activity android:name=".MemoriaInternaActivity" />
        <activity android:name=".SharedPrefsActivity" />
        <activity android:name=".PrefsActivity" />
        <activity android:name=".PrefsEditActivity" />
        <activity android:name=".PrefsMenuActivity" />
        <activity android:name=".SQLiteActivity" />
        <activity android:name=".AdicionarEstadoActivity" />
        <activity android:name=".EditarEstadoActivity" />

    </application>

</manifest>